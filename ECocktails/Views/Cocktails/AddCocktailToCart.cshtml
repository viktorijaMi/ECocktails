@model ECocktails.Domain.DTO.AddToShoppingCartDto

@{
    ViewData["Title"] = "Add To Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Add Selected Cocktail to User Shopping Card:</h1>


<hr />

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddCocktailToCart" method="post">
            <input type="hidden" asp-for="CocktailId" />
            <div class="form-group">
                <label asp-for="SelectedCocktail.Name"></label>
                <input disabled asp-for="SelectedCocktail.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>