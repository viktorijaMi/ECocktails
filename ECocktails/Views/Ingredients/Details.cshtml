@model ECocktails.Domain.DomainModels.Ingredient;
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Details for ingredient";
}
@{
    bool loggedIn = @Context.Session.GetString("isLoggedIn") != null && @Context.Session.GetString("isLoggedIn") == "YES";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h3 class="text-center">Details for <b>@Model.Name</b></h3>
        <div class="row">
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.PictureUrl)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.IngredientType)</th>
                        <th>@Html.DisplayNameFor(model => model.Bio)</th>
                        @{
                            if (loggedIn)
                            {
                                <th>Actions</th>

                            }
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="align-middle">
                            <img class="border-info rounded-circle" src="@Model.PictureUrl" alt="@Model.Name" style="max-width: 150px" />
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => Model.Name)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => Model.IngredientType)
                        </td>
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => Model.Bio)
                        </td>
                        @{
                            if (loggedIn)
                            {
                                <td>
                                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id"> Edit </a>
                                </td>
                            }
                        }
                    </tr>
                </tbody>
            </table>
            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('PictureUrlPreview');
            output.src = $("#PictureUrl").val();
        })
    </script>
}